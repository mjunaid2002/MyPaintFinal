                                {
                                    @Model.sett.Ntn
                                }
                            }
                        </div>
                        <div>
                            @if (Model.sett.Str != "0")
                            {
                                @Model.sett.Str
                            }
                        </div>
                    </div>
                </div>

            </main>

            <main style="margin-top:-40px">
                <div class="row contacts" style="padding: 10px; margin-top: -40px">
                    <div class="col invoice-to" style=" margin-top: -40px">
                        <div class="text-gray-light">INVOICE From:</div>
                        <h4 class="name">
                            @if (Model.supplier.CompanyName != "0")
                            {
                                @Model.supplier.CompanyName
                            }
                        </h4>
                        <div class="address">
                            @if (Model.supplier.Name != "0")
                            {
                                @Model.supplier.Name
                            }
                        </div>
                        <div class="address">
                            @if (Model.supplier.Address != "0")
                            {
                                @Model.supplier.Address
                            }
                        </div>
                        <div class="email">
                            @if (Model.supplier.Email != "0")
                            {
                                @Model.supplier.Email
                            }
                        </div>
                        <div class="email">
                            @if (Model.supplier.Phone != "0")
                            {
                                @Model.supplier.Phone
                            }
                        </div>
                        <div class="email">
                            @if (Model.supplier.Ntn != "0")
                            {
                                @Model.supplier.Ntn
                            }
                        </div>
                        <div class="email">
                            @if (Model.supplier.Gst != "0")
                            {
                                @Model.supplier.Gst
                            }
                        </div>
                    </div>
                    <div class="col invoice-details" style="margin-top:-50px">
                        <h3 class="invoice-id">PURCHASE INVOICE</h3>
                        <div class="date"><b>Invoice #:</b> @Model.PurMaster.InvID</div>
                        <div class="date"><b>Date of Invoice:</b> @edate.ToString("dd-MM-yyyy")</div>
                    </div>
                </div>
                <table border="0" cellspacing="0" cellpadding="0" class="table">
                    <thead>
                        <tr style="background-color:grey;color:white">
                            <td> # </td>
                            <th>Description of goods</th>
                            <th></th>
                            <th>UOM</th>
                            <th>QTY</th>
                            <th>Rate</th>
                            <th style="text-align:right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.p_detail)
                        {
                            sr += 1;
                            total += item.NetTotal;
                            <tr style="height:20px;">
                                <td>@sr</td>
                                <td align="left">
                                    @item.ItemName
                                    <br />
                                    <p>Serial # @item.BatchNumber</p>
                                </td>
                                <td></td>
                                <td>@item.Munit</td>
                                <td>@item.Qty</td>
                                <td>@item.SP</td>
                                <td style="text-align:right">@String.Format("{0:N}", item.NetTotal)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3"></td>
                            <td colspan="3">GRAND TOTAL</td>
                            <td> @String.Format("{0:N}", Model.PurMaster.NetAmount)</td>
                        </tr>
                        <tr>
                            <td colspan="3"></td>
                            <td colspan="3">CargoCharges</td>
                            <td class="text-left">@String.Format("{0:N}", Model.PurMaster.CargoCharges)</td>
                        </tr>
                        <tr>
                            <td colspan="3"></td>
                            <td colspan="3">DiscountAmount</td>
                            <td>@String.Format("{0:N}", Model.PurMaster.DiscountAmount)</td>
                        </tr>
                        <tr>
                            <td colspan="3"></td>
                            <td colspan="3">NET TOTAL</td>
                            <td>@String.Format("{0:N}", Model.PurMaster.GrandTotal)</td>
                        </tr>

                    </tfoot>
                </table>
                <br />
                <br />
                <div class="thanks"></div>
                <div class="notices">
                    <div style="margin-top:-150px">Total In words </div>
                    <div class="notice">
                        <b>
                            @Model.PurMaster.CargoName Only
                        </b>
                    </div>
                </div>
            </main>


            <footer style="margin-top:-35px">
                Invoice was created on a computer and is valid without the signature and seal.
            </footer>
