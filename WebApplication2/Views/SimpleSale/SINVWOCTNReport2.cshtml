@model WebApplication1.ViewModels.SaleInvVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Login.cshtml";
    var sr = 0;
    decimal total = 0;
    string us = "$";
    string Euro = "€";
    string Austrialan = "AUD";
    string Canadian = "CAD";
    string Rs = "Rs";
    DateTime edate = Convert.ToDateTime(@Model.SaleMaster.Date);
}
<style>
    #invoice {
        padding: 30px;
    }

    .invoice {
        position: relative;
        background-color: #FFF;
        min-height: 680px;
        padding: 15px
    }

        .invoice header {
            padding: 10px 0;
            margin-bottom: 20px;
            border-bottom: 1px solid #3989c6
        }

        .invoice .company-details {
            text-align: right
        }

            .invoice .company-details .name {
                margin-top: 0;
                margin-bottom: 0
            }

        .invoice .contacts {
            margin-bottom: 20px
        }

        .invoice .invoice-to {
            text-align: left
        }

            .invoice .invoice-to .to {
                margin-top: 0;
                margin-bottom: 0
            }

        .invoice .invoice-details {
            text-align: right
        }

            .invoice .invoice-details .invoice-id {
                margin-top: 0;
                color: #3989c6
            }

        .invoice main {
            padding-bottom: 50px
        }

            .invoice main .thanks {
                margin-top: -100px;
                font-size: 2em;
                margin-bottom: 50px
            }

            .invoice main .notices {
                padding-left: 6px;
                border-left: 6px solid #3989c6
            }

                .invoice main .notices .notice {
                    font-size: 1.2em
                }



        .invoice table tfoot td {
            background: 0 0;
            border-bottom: none;
            white-space: nowrap;
            text-align: right;
            padding: 10px 20px;
            font-size: 1.2em;
            border-top: 1px solid #aaa
        }

        .invoice table tfoot tr:first-child td {
            border-top: none
        }

        .invoice table tfoot tr:last-child td {
            color: #3989c6;
            font-size: 1.4em;
            border-top: 1px solid #3989c6
        }

        .invoice table tfoot tr td:first-child {
            border: none
        }

        .invoice footer {
            width: 100%;
            text-align: center;
            color: #777;
            border-top: 1px solid #aaa;
            padding: 8px 0
        }
</style>

<style type="text/css" media="print">
    .hide {
        display: none
    }
</style>
<script type="text/javascript">
    function printpage() {
        document.getElementById('printButton').style.visibility = "hidden";
        window.print();
        location.reload();
    }</script>
<div id="invoice">
    <div class="invoice overflow-auto" style="margin-top:-40px">
        <div style="min-width: 600px">
            <header>
                <div class="row">
                    <div class="col">
                        <img src="~/Uploads/@ViewBag.Image" style="width:80px;height:80px;margin-left:20px" data-holder-rendered="true" />
                    </div>
                    <button id="printButton" class="btn btn-info pull-right" onClick="printpage()" style="margin-top:-50px"><i class="fa fa-print"></i> Print</button>
                    <div class="col company-details" style="padding:10px;margin-bottom:-540px;margin-top:50px">
                        <div class="col invoice-details">
                            <h3 class="invoice-id" style="margin-top:-30px">SALE INVOICE</h3>
                             </div>
                        <h2 class="name">
                            @if (Model.sett.CNameStatus == true)
                            {
                                if (Model.sett.CompanyName != "0")
                                {
                                    @Model.sett.CompanyName
                                }
                            }
                        </h2>
                        <div>
                            @Model.sett.Address
                        </div>
                        <div>
                            @if (Model.sett.EmailStatus == true)
                            {
                                if (Model.sett.Email != "0")
                                {
                                    @Model.sett.Email
                                }
                            }
                        </div>
                        <div>
                            @if (Model.sett.PhoneStatus == true)
                            {
                                if (Model.sett.Phone != "0")
                                {
                                    @Model.sett.Phone
                                }
                            }
                        </div>
                        <div>
                            @if (Model.sett.NtnStatus == true)
                            {
                                if (Model.sett.Ntn != "0")
                                {
                                    @Model.sett.Ntn
                                }
                            }
                        </div>
                        <div>
                            @if (Model.sett.Str != "0")
                            {
                                @Model.sett.Str
                            }
                        </div>
                    </div>
                </div>
            </header>
            <main>
                <div class="row contacts" style="padding:10px">
                    <div class="col invoice-to" style="width:400px">
                        <div class="text-gray-light">INVOICE TO:</div>
                        @if (Model.customer.comp_check == true)
                        {
                            <h4 class="name">
                                @Model.customer.CompanyName
                            </h4>
                        }
                        @if (Model.customer.cus_check == true)
                        {
                            <div class="address">@Model.customer.Name</div>
                        }
                        <div class="address">
                            @if (Model.customer.Address != "0")
                            {
                                @Model.customer.Address
                            }
                        </div>
                        <div class="email">
                            @if (Model.customer.Email != "0")
                            {
                                @Model.customer.Email
                            }
                        </div>
                        <div class="email">
                            @if (Model.customer.Phone != "0")
                            {
                                @Model.customer.Phone
                            }
                        </div>
                        <div class="email">
                            @if (Model.customer.Ntn != "0")
                            {
                                @Model.customer.Ntn
                            }
                        </div>
                        <div class="email">
                            @if (Model.customer.Gst != "0")
                            {
                                @Model.customer.Gst
                            }
                        </div>
                    </div>
                     <br />
                    <br />
                    <div class="col invoice-details">
                        <div class="date"><b>Invoice #:</b> @Model.SaleMaster.InvID</div>
                        <div class="date"><b>Date of Invoice:</b> @edate.ToString("dd-MM-yyyy")</div>
                    </div>
                </div>
                <table border="1" cellspacing="0" cellpadding="0" class="table">
                    <thead>
                        <tr style="background-color:grey;color:white">
                            <th> # </th>
                            <th>Description of goods</th>
                            <th></th>
                            <th></th>
                            <th>QTY</th>
                            <th>UMO</th>
                            <th>Rate</th>
                            <th style="text-align:right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.s_detail)
                        {
                            sr += 1;
                            total += item.NetTotal;
                            <tr style="height:20px;">

                                <td>@sr</td>
                                <td colspan="3">@item.ItemName</td>
                                <td>@item.Qty</td>
                                <td>@item.Munit</td>
                                <td>@item.SP</td>
                                <td style="text-align:right">@String.Format("{0:N}", item.NetTotal)</td>
                            </tr>
                        }
                        @*@for (var i = 0; i < 10; i++)
                        {
                        <tr>
                            <td></td>
                            <td colspan="3"></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        }*@
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="6"></td>
                            <td>GRAND TOTAL</td>
                            <td class="text-left">@String.Format("{0:N}", total)</td>
                        </tr>
                        <tr>
                            <td colspan="6"></td>
                            <td>CargoCharges</td>
                            <td class="text-left">@String.Format("{0:N}", Model.SaleMaster.CargoCharges)</td>
                        </tr>
                        <tr>
                            <td colspan="6"></td>
                            <td>DiscountAmount</td>
                            <td>@String.Format("{0:N}", Model.SaleMaster.DiscountAmount)</td>
                        </tr>
                        <tr>
                            <td colspan="6"></td>
                            <td>NET TOTAL</td>
                            <td>
                                @String.Format("{0:N}", (total + Model.SaleMaster.CargoCharges - Model.SaleMaster.DiscountAmount))
                            </td>
                        </tr>

                    </tfoot>
                </table>
                <br />
                <br />
                <div class="thanks"></div>
                <div class="notices">
                    <div>Total In words </div>
                    <div class="notice">
                        <b>
                            @Model.SaleMaster.CargoName Only
                        </b>
                    </div>
                </div>
            </main>
            <footer>
                Invoice was created on a computer and is valid without the signature and seal.
            </footer>
        </div>
        <div></div>
    </div>
</div>

