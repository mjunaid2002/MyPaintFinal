@model WebApplication1.ViewModels.ProductVM
@{
    ViewBag.Title = "Creat";
}

<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-cubes" aria-hidden="true"></i> Registration</a></li>
            </ul>
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-12 col-md-12">
            <h4 class="section-subtitle"><b>Update Raw Product</b></h4>
            <a href="@Url.Action("Index","RawProducts")" class="btn btn-wide btn-success pull-right" style="margin-top:-40px"><i class="fa fa-list"></i> Raw Product List</a>
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-md-12">
                            <form action="Edit" method="post" enctype="multipart/form-data" onsubmit="return confirm('Are you sure you want to Register ?');">
                                <div class="row">
                                    <div class="form-group col-sm-1" style="display:none">
                                        <label> ID</label>
                                        @Html.TextBoxFor(m => m.products.ProductID, new { @class = "form-control input-xs", @readonly = "readonly", @required = "required" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Select Category</label>
                                        @Html.DropDownListFor(m => m.products.CategoryID, new SelectList(Model.Categories_list, "CategoryID", "CategoryName"), "Select Category", htmlAttributes: new { @class = "chosen-select form-control", @required = "required" })
                                    </div>
                                    <div class="form-group col-sm-2">
                                        <label>Quality</label>
                                        @Html.DropDownListFor(m => m.products.iduser, new SelectList(Model.QualityCategories, "ID", "CategoryName"), "Quality", htmlAttributes: new { @class = "chosen-select form-control" })
                                    </div>
                                    <div class="form-group col-sm-2">
                                        <label>Type</label>
                                        @Html.DropDownListFor(m => m.products.ProductType, new SelectList(Model.Product_Type_list, "ProductType", "ProductType"), "Type", htmlAttributes: new { @class = "chosen-select form-control" })
                                    </div>
                                    <div class="form-group col-sm-5">
                                        <label>Product Name</label>
                                        @Html.TextBoxFor(m => m.products.ProductName, new { @class = "form-control input-xs", @required = "required" })
                                    </div>
                                    <div class="form-group col-sm-5">
                                        <label>Description</label>
                                        @Html.TextBoxFor(m => m.products.desc, new { @class = "form-control input-xs", @required = "required" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Cost Price</label>
                                        @Html.TextBoxFor(m => m.products.UnitPrice, new { @class = "form-control input-xs" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Opening Stock</label>
                                        @Html.TextBoxFor(m => m.products.vattax, new { @class = "form-control input-xs" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Miniumum ReOrder Level</label>
                                        @Html.TextBoxFor(m => m.products.ReorderLevel, new { @class = "form-control input-xs" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Maximum Stock Level</label>
                                        @Html.TextBoxFor(m => m.products.MaxLevelRaw, new { @class = "form-control input-xs" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Active</label>
                                        @{
                                            if (Model.products.Active == "Active")
                                            {
                                                <select name="active" class="form-control">
                                                    <option value="Active">Active</option>
                                                    <option value="InActive">InActive</option>
                                                </select>
                                            }
                                            else
                                            {
                                                <select name="active" class="form-control">
                                                    <option value="InActive">InActive</option>
                                                    <option value="Active">Active</option>
                                                </select>
                                            }
                                        }
                                    </div>
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-primary" style="margin-top:10px"><i class="fa fa-save"></i> Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


