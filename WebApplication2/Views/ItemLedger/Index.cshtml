@model WebApplication2.ViewModels.ChartofaccountVm
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-cubes" aria-hidden="true"></i> Ledger</a></li>
            </ul>
        </div>
    </div>
    <h4 class="section-subtitle"><b>Ledger Search </b></h4>
    @using (Html.BeginForm("LedgerSearch", "ItemLedger", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel">
            <div class="panel-content">
                <div class="col-md-12">
                    <div class="form-group col-sm-3">
                        <label>Select Item</label>
                        <select class="chosen-select form-control" required name="item_id">
                            <option value="0" > Select  Item</option>
                            @foreach (var lst_dept in Model.item_list)
                            {
                                <option value="@lst_dept.ID"> @lst_dept.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Start Date </label>
                        <input type="date" required name="s_date" class="form-control" />
                    </div>
                    <div class="form-group col-sm-3">
                        <label>End Date </label>
                        <input type="date" required name="e_date" class="form-control" />
                    </div>
                    <div class="col-sm-3">
                        <button type="submit" name="submit" class="btn btn-success" style="margin-top:25px"> &nbsp;&nbsp; Search &nbsp;&nbsp;</button>
                    </div>
                </div>
                <br /><br /><br />
            </div>

        </div>

    }
</div>
