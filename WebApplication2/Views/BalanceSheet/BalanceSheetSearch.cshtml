@model WebApplication2.ViewModels.ChartofaccountVm
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var position = 0;
    //var bal = 0;
    //var sum_cr = 0; var sum_ccr = 0; var sum_cdr = 0; var sum_closingcr = 0; var sum_closingdr = 0;
    //var sum_dr = 0;
    decimal total = 0;
    decimal f_totala = 0;
    decimal f_totall = 0;
    decimal f_totalc = 0;
    var odr = 0;
    var ocr = 0; string dr_str = "DR"; string cr_str = "CR";
    //var cdr = 0;
    //var ccr = 0;
    //var a = 0;
    //decimal b = 0;
    //var c = 0;
    //var closing = 0;
}

<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-cubes" aria-hidden="true"></i>  Balance Balance</a></li>
            </ul>
        </div>
    </div>
    <h4 class="section-subtitle"><b> Balance Sheet Search </b></h4>
    <p class="pull-right" style="color: red;margin-top:-30px">
    </p>
    @using (Html.BeginForm("BalanceSheetSearch", "BalanceSheet", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-md-12">
            <div class="form-group col-sm-3">
                <label>Start Date </label>
                <input type="date" name="s_date" class="form-control" />
            </div>
            @*<div class="form-group col-sm-3">
                <label>End Date </label>
                <input type="date" name="e_date" class="form-control" />
            </div>*@
            <div class="col-sm-3">
                <button type="submit" name="submit" class="btn btn-success" style="margin-top:25px"> &nbsp;&nbsp; Search &nbsp;&nbsp;</button>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-sm-12">
            <div class="panel">

                <div class="panel-content">
                    <div class="table-responsive">
                        <center>
                            <h4>
                                Balance Sheet<br />
                                <b><u>@Session["BusinessUnitName"]</u></b><br />
                                @ViewBag.StartDate
                                @*@ViewBag.StartDate to @ViewBag.EndDate*@
                            </h4>
                            <br />
                        </center>
                        <div class="col-lg-6 col-xs-6" style="border:1px solid #CCCCCC">
                            <div class="main-box">
                                <header class="main-box-header clearfix">
                                    <h4><B>Assets</B></h4>
                                </header>

                                <div class="main-box-body clearfix">

                                    <div class="table-responsive">
                                        <table id="table-exampless" class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Account No</th>
                                                    <th>Account Name</th>
                                                    <th>Balance </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item2 in Model.ass)
                                                {
                                                    total = (Convert.ToDecimal(item2.cdr) - Convert.ToDecimal(item2.ccr));
                                                    f_totala += total;
                                                    <tr>
                                                        <td>@item2.AccountNo  </td>
                                                        <td>@item2.AccountTitleName </td>
                                                        <td>
                                                            <b>
                                                                @total &nbsp  @if (total >= 0)
                                                                {@dr_str }
                                                            else
                                                            { @cr_str}
                                                            </b>
                                                        </td>
                                                    </tr>

                                                }

                                            </tbody>
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th><button class="btn btn-info">@f_totala</button></th>
                                                </tr>
                                            </thead>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-xs-6" style="border:1px solid #CCCCCC">
                            <div class="main-box">
                                <header class="main-box-header clearfix">
                                    <h4><B>Liability</B></h4>
                                </header>

                                <div class="main-box-body clearfix">
                                    <div class="table-responsive">
                                        <table id="table-exampledd" class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Account No</th>
                                                    <th>Account Name</th>
                                                    <th>Balance </th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var item2 in Model.lib)
                                                {
                                                    total = (Convert.ToDecimal(item2.cdr) - Convert.ToDecimal(item2.ccr));
                                                    f_totall += total;
                                                    <tr>
                                                        <td>@item2.AccountNo  </td>
                                                        <td>@item2.AccountTitleName </td>
                                                        <td>
                                                            <b>
                                                                @total &nbsp  @if (total >= 0)
                                                                {@dr_str }
                                                            else
                                                            { @cr_str}
                                                            </b>
                                                        </td>
                                                    </tr>

                                                }
                                            </tbody>
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th><button class="btn btn-info">@f_totall</button></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>


                            <div class="main-box">
                                <header class="main-box-header clearfix">
                                    <h4><B>Capital</B></h4>
                                </header>

                                <div class="main-box-body clearfix">
                                    <div class="table-responsive">
                                        <table id="table-exampledd" class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Account No</th>
                                                    <th>Account Name</th>
                                                    <th>Balance </th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var item2 in Model.cap)
                                                {
                                                    total = (Convert.ToDecimal(item2.cdr) - Convert.ToDecimal(item2.ccr));
                                                    f_totalc += total;
                                                    <tr>
                                                        <td>@item2.AccountNo  </td>
                                                        <td>@item2.AccountTitleName </td>
                                                        <td>
                                                            <b>
                                                                @total &nbsp  @if (total >= 0)
                                                                {@dr_str }
                                                            else
                                                            { @cr_str}
                                                            </b>
                                                        </td>
                                                    </tr>

                                                }
                                            </tbody>
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th></th>
                                                    <th><button class="btn btn-info">@f_totalc</button></th>
                                                </tr>
                                            </thead>
                                            <thead>
                                                <tr>
                                                <tr>

                                                    <th></th>
                                                    <th>Liability + Capital =  </th>

                                                    <th><button class="btn btn-info">@(f_totall + f_totalc)</button></th>
                                                </tr>
                                            </thead>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
