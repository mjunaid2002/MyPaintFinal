@model WebApplication1.ViewModels.SaleInvVM
@{
    ViewBag.Title = "Creat";


}

<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-cubes" aria-hidden="true"></i> Registration</a></li>
            </ul>
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-12 col-md-12">
            <h4 class="section-subtitle"><b>Register Branch Opening Stock  </b></h4>
            <a href="@Url.Action("BranchStockIndex","BranchTransfer")" class="btn btn-wide btn-success pull-right" style="margin-top:-40px"><i class="fa fa-list"></i>  List</a>
            @if (Convert.ToString(TempData["succ"]) != "")
            {
                <p class="alert alert-success" style="width:400px;height:50px"><b>@TempData["succ"]</b></p>
            }

            <form action="BranchStockSave" method="post" enctype="multipart/form-data" onsubmit="return confirm('Are you sure you want to Register ?');">

                <div class="panel">
                    <div class="panel-content">


                        @*<div class=" form-group col-3">
                                <label>Select Branch</label>

                                @Html.DropDownListFor(m => m.branchid, new SelectList(Model.Branch_list, "id", "name"), "Select Branch", htmlAttributes: new { @id = "branchDropdown", @class = " form-control", @required = "required" })
                            </div>*@
                        <select id="branchDropdown" name="branchiid" class="form-control">
                            <option value="-1">Select Branch</option>
                            @foreach (var lst in Model.Branch_list)
                            {
                                <option value="@lst.id">@lst.name</option>
                            }
                        </select>
                        <br>
                        <div class="table-responsive" style="float:none">
                            <table class="table table-bordered table-hover table-striped table-success" id="searchable">
                                <thead class="bordered-darkorange">

                                    <tr>

                                        <th>Product Name</th>

                                        <th style="background-color:lightcyan">Qty</th>

                                    </tr>
                                </thead>
                                <tbody class="abc">

                                    @foreach (var item in Model.pro_listsss)
                                    {
                                        <tr>
                                            <td><input type="text" name="pname[]" value="@item.ProductName" readonly> </td>
                                            <td hidden><input type="number" name="id[]" value="@item.ProductID"></td>
                                            <td style="background-color: lightcyan"><input type="number" name="qty[]" value="0" step="0.001"></td>

                                        </tr>
                                    }
                                </tbody>

                            </table>

                            <div class="col-sm-12">
                                @if (Session["SubProductPricingRegionA"].ToString() != "0")
                                {
                                    <button type="submit" class="btn btn-primary" style="margin-top:10px"><i class="fa fa-save"></i> Save</button>
                                }
                            </div>
                        </div>



                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@*<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>*@

<script>

    $(document).ready(function () {
        $(document).on('change', '#branchDropdown', function () {
            var branchid = $(this).val();
            $.ajax({
                url: '/BranchTransfer/UpdateTable', // Replace with your actual controller and action
                type: 'GET',
                data: { branchid: branchid },
                success: function (data) {
                    
                    if (data.length > 0) {
                        
                        $.each(data, function (index, rowData) {
                            var matchingRow = $('.abc tr:has(input[value="' + rowData.pid + '"])');

                            // Update values if a matching row is found
                            if (matchingRow.length > 0) {


                                matchingRow.find('input[name="qty[]"]').val(rowData.qty);
                                //matchingRow.find('input[name="Quarter[]"]').val(rowData.splower);
                                //matchingRow.find('input[name="gallon[]"]').val(rowData.gallon);
                                //matchingRow.find('input[name="drum[]"]').val(rowData.drum);
                            }
                        });
                    }
                    else {
                        $('.abc input[type="number"]').not('[name^="id"]').val('0');
                    }
                },
                error: function () {
                    console.error('Failed to fetch data.');
                }
            });
        });
    });
</script>
