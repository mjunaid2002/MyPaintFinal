            $('#cr').val('0');
            $('#narr').val('');


            var table = document.getElementById("invoiceItem"), sumVal = 0;
            for (var i = 1; i < table.rows.length; i++) {
                sumVal = sumVal + parseInt(table.rows[i].cells[7].innerHTML);
            }
            
            document.getElementById("t_debit").value = sumVal;
       


        }
    }
    function ShowEditModal(button) {
        if (confirm("Are you sure want to Edit the row?"))
            var $row = $(button).closest('tr');


        var col1 = $row.find("td:eq(9)").html();
        var col2 = $row.find("td:eq(10)").html();
        var col3 = $row.find("td:eq(11)").html();
        var col4 = $row.find("td:eq(12)").html();
        var col5 = $row.find("td:eq(7)").html();
        var col6 = $row.find("td:eq(8)").html();

        document.getElementById("v_type").value = col1;
        document.getElementById("account_no").value = col3;
        document.getElementById("dr").value = col5;
        document.getElementById("cr").value = col6;
        document.getElementById("narr").value = col4;

        $(button).closest("tr").remove();

        var table = document.getElementById("invoiceItem"), sumVal = 0;
        for (var i = 1; i < table.rows.length; i++) {
            sumVal = sumVal + parseInt(table.rows[i].cells[7].innerHTML);
        }
       
        document.getElementById("t_debit").value = sumVal;
   

    }

    function deleteRow(btn) {
        if (confirm("Are you sure want to delete the row?"))
            $(btn).closest("tr").remove();


        var table = document.getElementById("invoiceItem"), sumVal = 0;
        for (var i = 1; i < table.rows.length; i++) {
            sumVal = sumVal + parseInt(table.rows[i].cells[7].innerHTML);
        }
          document.getElementById("t_debit").value = sumVal;
      
    }


    function Action(code) {
