        var selObj = document.getElementById("account_name");
        var account_no = selObj.options[selObj.selectedIndex].value;
        var dr = document.getElementById("dr").value;
        var cr = document.getElementById("cr").value;
        var narr = document.getElementById("narr").value;

         //alert(account_name);
        if (account_name == "" || account_name == 0 || account_name == "Select Account" ) {
            alert("Please Select Account");
        }
        else if (dr == "" || dr == 0) {

            alert("Please Enter Debit Amount");
        }
        else {
            var htmlRows = '';
            htmlRows += '<tr>';
            //htmlRows += '<td style="width:80px !important"><a class="badge badge-xs x-danger b-rounded" onclick="return deleteRow(this)" ><i class="fa fa-trash-o"></i></a><a class="badge badge-xs x-warning b-rounded" onclick="return ShowEditModal(this)" ><i class="fa fa-pencil"></i></a></td>';
            htmlRows += '<td style="width:80px !important"><a class="badge badge-xs x-danger b-rounded" onclick="return deleteRow(this)" ><i class="fa fa-trash-o"></i></a></td>';
