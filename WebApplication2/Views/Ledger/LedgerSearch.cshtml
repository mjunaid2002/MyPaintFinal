@model WebApplication2.ViewModels.ChartofaccountVm
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var position = 0;
    var bal = 0;
    var sum_cr = 0;
    var sum_dr = 0;
    var total = 0;
    int op = 0;
    var s_date = ViewBag.StartDate;
    string PINV = "PINV";
    string SINV = "SINV";

    decimal SumOfInvoice0_30 = Model.SumOfInvoice0_30;
    decimal SumOfInvoice31_60 = Model.SumOfInvoice_31_60;
    decimal SumOfInvoice61_90 = Model.SumOfInvoice_61_90;

    decimal SumOfInvoice0_30_1 = Model.SumOfInvoice0_30_1;
    decimal SumOfInvoice31_60_1 = Model.SumOfInvoice_31_60_1;
    decimal SumOfInvoice61_90_1 = Model.SumOfInvoice_61_90_1;

    decimal balamount = 0, finalamount = Model.finaltotal, sec1 = 0, sec2 = 0, sec3 = 0, sec4 = 0;

}
@*<style>
                tbody > tr > td {
                    padding: 0 !important;
