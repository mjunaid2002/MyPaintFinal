@model CRM.Models.Session
@{
    ViewBag.Title = "Creat";
}

<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-cubes" aria-hidden="true"></i> Registration</a></li>
            </ul>
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-12 col-md-12">
            <h4 class="section-subtitle"><b>Edit Session </b></h4>
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-md-12">

                            @using (Html.BeginForm("Edit", "Session", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {<div class="row">
                                    <div class="form-group col-sm-3">
                                        <label>Session Name</label>
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-xs" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Start Date</label>
                                        @Html.TextBoxFor(model => model.StartDate, new { @type = "date", @Value = Model.StartDate.ToString("yyyy-MM-dd"), @class = "form-control input-xs" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>End Date</label>
                                        @Html.TextBoxFor(model => model.EndDate, new { @type = "date", @Value = Model.EndDate.ToString("yyyy-MM-dd"), @class = "form-control input-xs" })
                                    </div>
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-primary" style="margin-top:10px"><i class="fa fa-check"></i> Save</button>
                                    </div>
                                </div>
                            }
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


