@model IEnumerable<WebApplication1.QueryViewModel.Salequery>
@{
    ViewBag.Title = "Index";
}
<script language="javascript">
    function printdiv(printpage) {
        var headstr = "<html><head><title></title></head><body>";
        var footstr = "</body>";
        var newstr = document.all.item(printpage).innerHTML;
        var oldstr = document.body.innerHTML;
        document.body.innerHTML = headstr + newstr + footstr;
        window.print();
        window.location.href = '/SaleDis/Index';
    }
</script>
<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-print" aria-hidden="true"></i> Invoices</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h4 class="section-subtitle"><b>Sale Return Invoices List</b></h4>
            <a href="@Url.Action("Index", "SaleReturn")" class="btn btn-wide btn-success pull-right" style="margin-top:-40px"><i class="fa fa-plus"></i>  Creat New Invoice</a>
            <div class="panel">
                <div class="panel-content">
                    <div class="table-responsive" id="div_print">
                        <table class="table table-bordered table-hover table-striped table-success" id="searchable">
                            <thead class="bordered-darkorange">
                                <tr>
                                    <th>Inv Id</th>
                                    <th>CustomerName</th>
                                    <th>Cargo Name</th>
                                    <th>Date</th>
                                    <th>Net Total</th>
                                    <th>Discount</th>
                                    <th>Grand Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="abc">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.InvID</td>
                                        <td>@item.CustomerName</td>
                                        <td>@item.CargoName</td>
                                        <td>@item.Date</td>
                                        <td>@item.Total</td>
                                        <td>@item.DiscountAmount</td>
                                        <td>@item.GrandTotal</td>
                                        <td>
                                            <a href="@Url.Action("Delete", new { ID= item.InvID } )" class="badge badge-xs x-danger b-rounded"><i class="fa fa-trash-o"></i></a>
                                            <a href="@Url.Action("Edit", new { ID= item.InvID } )" class="badge badge-xs x-primary b-rounded"><i class="fa fa-pencil"></i></a>
                                            <a href="@Url.Action("SINVWOCTNReturnReport","SaleReturn", new { ID= item.InvID,value=1 } )" target="_blank" class="badge badge-xs x-warning b-rounded">Rs</a>
                                            <a href="@Url.Action("SINVWOCTNReturnReport","SaleReturn", new { ID= item.InvID,value=2 } )" target="_blank" class="badge badge-xs x-warning b-rounded">Us</a>
                                            <a href="@Url.Action("SINVWOCTNReturnReport","SaleReturn", new { ID= item.InvID,value=3 } )" target="_blank" class="badge badge-xs x-warning b-rounded">Euro</a>
                                            <a href="@Url.Action("SINVWOCTNReturnReport","SaleReturn", new { ID= item.InvID,value=4 } )" target="_blank" class="badge badge-xs x-warning b-rounded">Aus</a>
                                            <a href="@Url.Action("SINVWOCTNReturnReport","SaleReturn", new { ID= item.InvID,value=5 } )" target="_blank" class="badge badge-xs x-warning b-rounded">Can</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th style="width:60px"><input type="text" placeholder="Search Here" name="search_browser" class="form-control input-sm" style="width:80px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
