@model CRM.Models.Town
@{
    ViewBag.Title = "Create";
}

<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-cubes" aria-hidden="true"></i> Registrations</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h4 class="section-subtitle"><b>Update Town</b></h4>
            <a href="@Url.Action("Index", "Towns")" class="btn btn-wide btn-success pull-right" style="margin-top:-40px"><i class="fa fa-list"></i>  Town List</a>
            <div class="panel">

                <div class="panel-content">
                    <div class="row">
                        <div class="col-md-12" style="margin-top:-5px">
                            <form action="Edit" method="post" enctype="multipart/form-data" onsubmit="return confirm('Are you sure you want to Register ?');">
                                <div class="row">
                                    <div class="form-group col-sm-4">
                                        <label>ID</label>
                                        @Html.TextBoxFor(m => m.ID, new { @class = "form-control input-xs", @readonly = "readonly" })
                                    </div>
                                    <div class="form-group col-sm-8">
                                        <label>Town Name</label>
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-xs", @required = "required" })
                                    </div>
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-primary" style="margin-top:10px"><i class="fa fa-plus"></i> Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
