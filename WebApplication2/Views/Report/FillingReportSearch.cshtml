@model IEnumerable<WebApplication1.QueryViewModel.ProductIngrMasterQuery>
@{
    ViewBag.Title = "Index";
    var tex = @TempData["Tex"] as string;
    var totalweight = Model.Sum(x=>x.totalweight);
    var Total_cost = Model.Sum(x=>x.Total_cost);

