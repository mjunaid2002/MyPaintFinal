@model IEnumerable<WebApplication1.QueryViewModel.PoDetail>
@{Layout = null;
    var total = Model.Sum(x => x.total);
    var disc = Model.Sum(x => x.disc);

}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>PURCHASE INVOICE </title>

</head>
<body>
    <div class="container text-center " style="margin-top:40px">
        <div style="display: flex; justify-content: space-between;">
            <div style="padding: 10px; width: 40%; text-align: left;font-size:15px;font-weight:bold">
                <div style="display: flex">
                    <div>
                        <img style="max-width: 180px; height: auto;" src="~/Content/invoiceimg1.png" alt="Invoice Image" />
                    </div>
                    <div style=" padding: 10px; width:70%;text-align:left">

                        <div style="color:blue;font-size:18px;font-weight:bold">@ViewData["compname"]</div>
                        <div>@ViewData["email"]</div>
                        <div>@ViewData["phone"]</div>
                        <div>@ViewData["address"]</div>

                    </div>
                </div>

                <div style="background-color: #8686df;text-align:left;font-weight:bold;font-size:15px;padding-left:5px">Bill TO :</div>
                <div>@ViewData["customername"]</div>
                <div>@ViewData["cusaddress"]</div>
                <div>@ViewData["cusphone"]</div>
                @*<div>@ViewData["cargo"]</div>*@



            </div>
            <div style=" padding: 10px; width: 60%; text-align: Center">
                <div style="color: blue; font-size: 18px; font-weight: bold"> PURCHASE INVOICE</div>
                <br />
                <div><b>Inv#</b> <span style="border:1px solid; width: 100px; display: inline-block;">@ViewData["OrderId"]</span></div>
                <div><b>Date</b> <span style="border: 1px solid; width: 100px; display: inline-block; ">@ViewData["date"]</span></div>
                <br>
                <div>@DateTime.Now.ToString("dd/MM/yyyy hh:mm:ss tt ")</div>
            </div>
        </div>




        <table class="table" style="border:1px solid">

            <thead>
                <tr class="text-center" style="background-color: #8686df">

                    <th style="width:40%"> Item Name</th>
                    <th>Cost Price</th>
                    <th>Quantity</th>
                    <th>Net Total </th>

                </tr>
            </thead>
            <tbody>
                @if (!Model.Any()) { }
                else
                {

                    foreach (var lst in Model)
                    {


                        <tr>

                            <td class="text-left">@lst.pname</td>
                            <td>@lst.cp</td>
                            <td>@lst.qty</td>
                            <td>@lst.total</td>


                        </tr>

                    }

                }



            </tbody>

        </table>

        <div style="text-align:right;font-weight:bold">Gross Total : @total</div>
        <div style="text-align:right;font-weight:bold">Discount : @disc</div>
        <div style="text-align:right;font-weight:bold">Total : @total</div>

    </div>


</body>
</html>








