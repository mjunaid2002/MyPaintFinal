    function tota() {

        var p_box = document.getElementById("p_box").value;
        var ctn = document.getElementById("ctn").value;
        var n_total = document.getElementById("n_total").value;
        var ctn1;
        ctn1 = ctn * p_box;
        var qty = document.getElementById("qty").value;
        if (qty == '' || qty == null) {
            document.getElementById("qty").value = "0";

        }
        if (ctn == '' || ctn == null) {
            document.getElementById("ctn").value = "0";

        }
        var sp = document.getElementById("dis_amount").value;
        if (sp == '' || sp == null) {
            document.getElementById("dis_amount").value = "0";
        }


        var qty_f;
        qty_f = parseFloat(qty) + parseFloat(ctn1);
        var totl;
        totl = qty_f * sp;
        if (n_total == '' || n_total == null) {
            document.getElementById("n_total").value = "0";
        }
        document.getElementById("n_total").value = totl;
        if (n_total == '' || n_total == null) {
            document.getElementById("n_total").value = "0";
        }
    }
    function gt() {
        var cgo_charges = document.getElementById("cgo_charges").value;
        var total = document.getElementById("total").value;
        var nt = document.getElementById("net_final").value;
        var t_f = parseFloat(cgo_charges) + parseFloat(nt);
        document.getElementById("total").value = t_f;
        var da = document.getElementById("d_amount").value;
        document.getElementById("d_amount").value = "0";
        document.getElementById("o_charges").value = "0";
        document.getElementById("g_total").value = t_f;
        document.getElementById("r_total").value = t_f;
    }
    function gt1() {
        var da = document.getElementById("d_amount").value;
        var total = document.getElementById("total").value;
        document.getElementById("o_charges").value = "0";
        var totl = total - da;
        document.getElementById("g_total").value = totl;
    }
    function gt12() {
        var da = document.getElementById("d_amount").value;
        var total = document.getElementById("total").value;
        var totl = total - da;
        var o_charges = document.getElementById("o_charges").value;
        var totl1 = parseFloat(totl) + parseFloat(o_charges);
        document.getElementById("g_total").value = totl1;
    }
    function tota_dis() {
        var da = document.getElementById("disc").value;
        var total = document.getElementById("sp").value;
        var totl = da * total;
        var final = totl / 100;
        document.getElementById("dis_amount").value = final.toFixed(2);;
