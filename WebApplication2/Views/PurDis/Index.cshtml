@model IEnumerable<WebApplication1.QueryViewModel.PurchaseDis>
@{
    ViewBag.Title = "Index";
}
<script language="javascript">
    function printdiv(printpage) {
        var headstr = "<html><head><title></title></head><body>";
        var footstr = "</body>";
        var newstr = document.all.item(printpage).innerHTML;
        var oldstr = document.body.innerHTML;
        document.body.innerHTML = headstr + newstr + footstr;
        window.print();
        window.location.href = '/PurDis/Index';
     
    }
</script>
<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-print" aria-hidden="true"></i> Invoices</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h4 class="section-subtitle"><b>Purchase Invoices List</b></h4>
            <input name="b_print" type="button" class="btn btn-wide btn-info" onClick="printdiv('div_print');" value=" Print Report ">

            <a href="@Url.Action("Create", "PurDis")" class="btn btn-wide btn-success pull-right" style="margin-top:-40px"><i class="fa fa-plus"></i>  Creat New Invoice</a>
            <div class="panel">
                <div class="panel-content">
                    <div class="table-responsive" id="div_print">
                        <table class="table table-bordered table-hover table-striped table-success" id="searchable">
                            <thead class="bordered-darkorange">
                                <tr>
                                    <th>Inv Id</th>
                                    <th>Rate Code</th>
                                    <th>Supplier</th>
                                    <th>Cargo Name</th>
                                    <th>Date</th>
                                    <th>Net Total</th>
                                    <th>Discount</th>
                                    <th>Grand Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody class="abc">
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.invid</td>
                                        <td>@item.RateCode</td>
                                        <td>@item.SupplierName</td>
                                        <td>@item.cargoname</td>
                                        <td>@item.date</td>
                                        <td>@item.total</td>
                                        <td>@item.discount</td>
                                        <td>@item.GrandTotal</td>

                                        <td>
                                            <a href="@Url.Action("Delete", new { ID= item.invid } )" new { onclick="return confirm('Are you sure you want to delete this record?');" class="badge badge-xs x-danger b-rounded"><i class="fa fa-trash-o"></i></a>
                                            <a href="@Url.Action("PurDisRep", new { ID= item.invid } )" class="badge badge-xs x-warning b-rounded"><i class="fa fa-print"></i></a>
                                            <a href="@Url.Action("Edit", new { ID= item.invid } )" class="badge badge-xs x-primary b-rounded"><i class="fa fa-pencil"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th style="width:60px"><input type="text" placeholder="Search Here" name="search_browser" class="form-control input-sm" style="width:80px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th style="width:100px"><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm" style="width:100px"></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
