@model WebApplication1.ViewModels.ProductVM
@{
    ViewBag.Title = "Creat";
}

<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-cubes" aria-hidden="true"></i> Registration</a></li>
            </ul>
        </div>
    </div>
    <div class="row ">
        <div class="col-sm-12 col-md-12">
            <h4 class="section-subtitle"><b>Update Category</b></h4>
            <a href="@Url.Action("Index","MainCategory")" class="btn btn-wide btn-success pull-right" style="margin-top:-40px"><i class="fa fa-list"></i> Category List</a>
            <div class="panel">
                <div class="panel-content">
                    <div class="row">
                        <div class="col-md-12">

                            <form action="Edit" method="post" enctype="multipart/form-data" onsubmit="return confirm('Are you sure you want to Register ?');">
                                <div class="row">
                                    <div class="form-group col-sm-1">
                                        <label>ID</label>
                                        @Html.TextBoxFor(m => m.categories.CategoryID, new { @class = "form-control input-xs", @readonly = "readonly", @required = "required" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Select Sub Category</label>
                                        @Html.DropDownListFor(m => m.categories.MainCategoryID, new SelectList(Model.listss, "MainCategoryID", "MainCategoryName"), "Select Sub Category", htmlAttributes: new { @class = "chosen-select form-control", @required = "required" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Category Name</label>
                                        @Html.TextBoxFor(m => m.categories.CategoryName, new { @class = "form-control input-xs", @required = "required" })
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label>Tax Rate</label>
                                        @Html.TextBoxFor(m => m.categories.Description, new { @class = "form-control input-xs" })
                                    </div>
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-primary" style="margin-top:10px"><i class="fa fa-save"></i> Save</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


