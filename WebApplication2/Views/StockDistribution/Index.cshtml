@model IEnumerable<WebApplication1.QueryViewModel.DistributionMaster>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $('#searchable').DataTable({
        buttons: [
            'copy', 'excel', 'pdf'
        ]
    });
</script>
<div class="content">
    <div class="content-header">
        <div class="leftside-content-header">
            <ul class="breadcrumbs">
                <li><a><i class="fa fa-cubes" aria-hidden="true"></i> Stock Distribution</a></li>
            </ul>
        </div>
       
    </div>

    <div class="row">
        <h4 class="section-subtitle"><b> Stock Distribution</b></h4>

        @using (Html.BeginForm("Index", "StockDistribution", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group col-sm-3">
                <label>Start Date</label>
                <input type="date" name="s_date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" required />
            </div>
            <div class="form-group col-sm-3">
                <label>End Date </label>
                <input type="date" name="e_date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" required />
            </div>
            <div class="col-sm-3">
                <button type="submit" name="submit" class="btn btn-success" style="margin-top:25px"> &nbsp;&nbsp; Search &nbsp;&nbsp;</button>
            </div>
        }

        @if (Session["SubStockInwardA"].ToString() != "0")
        {
            <a href="@Url.Action("Create", "StockDistribution")" class="btn btn-wide btn-success pull-right" style="margin-top:-40px"><i class="fa fa-plus"></i>  Creat New</a>
        }
    </div>
   
    <div class="row">
        <div class="col-sm-12">
          
            <div class="panel">
                <div class="panel-content">


                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped table-success" id="searchable">
                            <thead class="bordered-darkorange">
                                <tr>

                                    <th>SR</th>
                                    <th>Region</th>
                                    <th>Date</th>
                                    <th>From</th>
                                    @*<th>To</th>*@
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody class="abc">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.invid</td>
                                        <td>@item.regionname</td>
                                        <td>@item.date.ToString("dd-MM-yyyy")</td>
                                        <td>@item.FromStore</td>
                                        @*<td>@item.ToStore</td>*@
                                        <td>
                                            @if (Session["SubStockInwardU"].ToString() != "0")
                                            {
                                                <a href="@Url.Action("Edit", new { ID = item.invid })" new { onclick="return confirm('Are you sure you want to Edit this record?');" class="label label-warning shiny input-xs"><i class="fa fa-pencil"></i></a>
                                            }
                                            @if (Session["SubStockInwardD"].ToString() != "0")
                                            {
                                                <a href="@Url.Action("Delete", new { ID = item.invid })" new { onclick="return confirm('Are you sure you want to Delete this record?');" class="label label-danger shiny input-xs"><i class="fa fa-trash"></i></a>
                                            }
                                            @if (Session["SubStockInwardV"].ToString() != "0")
                                            {
                                                <a href="@Url.Action("PrintInvoice", new { ID = item.invid })" class="label label-success shiny input-xs" target="_blank"><i class="fa fa-print"></i></a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    @*<th><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>*@
                                    <th><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                    <th><input type="text" name="search_browser" placeholder="Search Here" class="form-control input-sm"></th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

